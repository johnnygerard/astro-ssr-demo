---
import Layout from "~/layouts/Layout.astro";
---

<Layout>
  <div class="grid min-h-screen place-items-center px-6">
    <div
      class="w-full max-w-md rounded-xl border border-white/10 bg-white/5 p-6 text-center"
    >
      <p class="text-sm font-medium text-neutral-300">404</p>
      <h1 class="mt-2 text-2xl font-semibold tracking-tight">Not found</h1>
      <p class="mt-2 text-sm text-neutral-300">
        Sorry, the page you are looking for does not exist.
      </p>
      <a
        href="/"
        class="mt-5 inline-flex items-center justify-center rounded-md border border-white/10 bg-white/5 px-3 py-2 text-sm font-medium text-neutral-100 no-underline hover:bg-white/10"
      >
        Back to Home
      </a>
    </div>
  </div>
</Layout>
